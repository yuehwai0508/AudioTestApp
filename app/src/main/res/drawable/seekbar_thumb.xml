<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- res/drawable/seekbar_thumb.xml -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="6dp"/>
            <size android:width="18dp" android:height="26dp" />
            <gradient
                android:endColor="#FF303030"
                android:startColor="#FFEEEEEE"
                android:type="radial"
                android:gradientRadius="180%"
                android:centerX="92%"
                android:centerY="50%"
            />
            <stroke
                android:width="2.2dp"
                android:color="#19303030"
                android:dashWidth="1dp"
                android:dashGap="0.2dp"
                />
        </shape>
    </item>
</layer-list>